name:                jsaddle-benchmark
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
license:             MIT
license-file:        LICENSE
author:              Divam
maintainer:          dfordivam@gmail.com
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

flag disable-reflex
  description: Disable reflex executable (to build without reflex-platform)
  default: True
  manual: False

library
  hs-source-dirs:      src
  build-depends:       base >=4.9 && <5,
                       jsaddle,
                       lens,
                       mtl,
                       text,
                       time
  exposed-modules:
     Language.Javascript.JSaddle.Benchmark
  default-language:    Haskell2010

executable jsaddle-benchmark
  main-is:             Main.hs
  hs-source-dirs:      src-bin
  -- other-modules:
  -- other-extensions:
  build-depends:       base,
                       jsaddle-warp,
                       jsaddle-benchmark
  -- hs-source-dirs:
  default-language:    Haskell2010
  if os(android)
    buildable: False

executable jsaddle-benchmark-reflex
  main-is:             MainReflex.hs
  hs-source-dirs:      src-bin
  -- other-modules:
  -- other-extensions:
  build-depends:       base,
                       jsaddle,
                       jsaddle-benchmark,
                       reflex-dom,
                       safe,
                       text
  -- hs-source-dirs:
  default-language:    Haskell2010
  if flag(disable-reflex)
    buildable: False